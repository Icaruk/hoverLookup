{
  // Biome configuration
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // HoverLookup configuration
  "hoverLookup.mongodbUrl": "mongodb://root:root@localhost:27018/?directConnection=true&authSource=admin",
  "hoverLookup.mongodbDatabases": [
    "hoverlookup"
  ],
  "hoverLookup.mongodbCollections": [
    {
      "collection": "users",
      "searchFields": [
        "id",
        "username",
        "email"
      ]
    },
    {
      "collection": "orders",
      "searchFields": [
        "id",
        "user_id"
      ]
    }
  ]
}